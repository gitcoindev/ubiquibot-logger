{
  "name": "ubiquibot-logger",
  "version": "0.3.1",
  "description": "Ubiquity logging module with Supabase support.",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "type": "module",
  "tsup": {
    "entry": [
      "src/supabase/helpers/tables/logs.ts",
      "src/supabase/helpers/tables/pretty-logs.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "format": "esm"
  },
  "files": [
    "dist/*"
  ],
  "main": "./dist/logs.js",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/logs.d.ts"
      ],
      "pretty-logs": [
        "./dist/pretty-logs.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "require": "./dist/logs.js",
      "types": "./dist/logs.d.ts",
      "import": "./dist/logs.js"
    },
    "./pretty-logs": {
      "require": "./dist/pretty-logs.js",
      "types": "./dist/pretty-logs.d.ts",
      "import": "./dist/pretty-logs.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepare": "husky install",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "eslint . --ext .ts --cache --fix --plugin tsc --rule 'tsc/config: [2, { configFile: ./tsconfig.json }]'"
  },
  "keywords": [
    "typescript",
    "logging",
    "supabase",
    "dao",
    "ubiquity",
    "open-source"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.4.0",
    "dotenv": "^16.3.1",
    "pino-std-serializers": "^6.2.2",
    "probot": "^12.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "knip": "^3.3.0",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "tsup": "^7.2.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
